.card-content
  .media
    .media-left
      %figure.image.is-48x48= image_tag user_avatar(user), class: :user_avatar
    .media-content
      = link_to user_path(user), class: 'is-block' do
        %strong= user.name
      .tag
        = icon 'far fa-newspaper'
        %span
          = user.posts_count
          Posts
      .tag
        = icon 'far fa-comment'
        %span
          = user.comments_count
          Comments
      - if local_assigns.fetch :render_reactions, false
        .tag
          = icon 'far fa-smile-wink'
          %span
            = user.reactions_count
            Reactions
