.card-footer
  .card-footer-item
    = icon "far fa-thumbs-up"
    %span= post.reactions_count

  .card-footer-item
    = icon "far fa-comment"
    %span= post.comments_count

  = link_to post, class: 'card-footer-item' do
    = icon "far fa-eye"
    %span View

  = link_to post.permalink_url, class: 'card-footer-item', target: :_blank do
    = icon "fab fa-facebook-square"
    %span On Facebook

  .card-footer-item.has-text-grey
    = icon "far fa-clock"
    %span= post.created_at.in_time_zone("Cairo").strftime('%Y-%m-%d %H:%M')
